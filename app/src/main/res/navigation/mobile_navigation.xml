<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <!-- Dashboard Fragment -->
    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.agress.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboard_to_search"
            app:destination="@id/navigation_search"/>
    </fragment>

    <!-- Product Fragment -->
    <fragment
        android:id="@+id/navigation_product"
        android:name="com.example.agress.ui.product.ProductFragment"
        android:label="@string/title_product"
        tools:layout="@layout/fragment_product">
        <argument
            android:name="search_query"
            app:argType="string"
            android:defaultValue=""/>
        <action
            android:id="@+id/action_to_product_detail"
            app:destination="@id/navigation_product_detail"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_product_detail"
        android:name="com.example.agress.ui.product.ProductDetailFragment"
        android:label="@string/title_product_detail"
        tools:layout="@layout/fragment_product_detail">
        <argument
            android:name="product_id"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/navigation_checkout"
        android:name="com.example.agress.ui.checkout.CheckoutFragment"
        android:label="@string/title_checkout"
        tools:layout="@layout/fragment_checkout" />


    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.agress.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <!-- Search Fragment -->
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.agress.ui.product.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search">
        <!-- Action to product list with search query -->
        <action
            android:id="@+id/action_search_to_product"
            app:destination="@id/navigation_product"
            app:popUpTo="@id/navigation_dashboard"
            app:popUpToInclusive="false"/>
        <!-- Action to product detail -->
        <action
            android:id="@+id/action_search_to_product_detail"
            app:destination="@id/navigation_product_detail"
            app:popUpTo="@id/navigation_dashboard"
            app:popUpToInclusive="false"/>
    </fragment>
</navigation>